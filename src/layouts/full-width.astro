---
import DefaultLayout from "./default.astro";

const { title } = Astro.props;
---

<DefaultLayout>
    <main class="isolate container mx-auto lg:max-w-6xl xl:max-w-7xl">
        {title && (
                <h1 class="text-3xl font-bold tracking-tight sm:text-5xl mb-8">
                    {title}
                </h1>
        )}
        <slot/>
    </main>
</DefaultLayout>
