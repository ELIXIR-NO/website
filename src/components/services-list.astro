---
const { services } = Astro.props;
---

<div class="overflow-hidden rounded-md mt-8" data-tags-container="1">
    <ul role="list" class="divide-y">
        {services.map((service) => (
                <li class={`overflow-clip relative px-6 py-6 flex animate__animated animate__fadeIn`}
                    data-tags={`${service.tags?.join(",")}`}>
                    <a href={`/services/${service.slug}`}>
                        {service.tags.includes("service") && (
                                <span class="absolute shadow top-0 z-10 text-xs right-0 text-white bg-brand-primary px-1.5 py-0.5 rounded-bl opacity-75">
                                    Node Service
                                </span>
                        )}
                        <span class="z-10 w-2/3">
                            <h1 class="font-bold text-2xl">
                                {service.title}
                            </h1>
                            <p class="font-light text-xs leading-relaxed w-2/3">
                                {service.summary}
                            </p>
                        </span>
                            <span class="flex justify-center items-center h-full w-1/3 absolute top-0 right-0 bg-slate-50 overflow-clip transform origin-top-right skew-x-12">
                            <img src={service.logo}
                                 class="w-full overflow-hidden aspect-[4/3] scale-75 h-full -skew-x-12"
                                 alt="Cover image"
                            />
                        </span>
                    </a>
                </li>
        ))}
    </ul>
</div>
